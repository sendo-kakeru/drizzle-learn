{
	"name": "@repo/db",
	"version": "1.0.0",
	"license": "UNLICENSED",
	"exports": {
		"./schema/*": {
			"types": "./dist/schema/*.d.ts",
			"import": "./dist/esm/*.js",
			"require": "./dist/*.js"
		}
	},
	"scripts": {
		"dev": "pnpm run \"/^dev:/\"",
		"dev:tsup": "tsup --watch",
		"dev:tsc": "tsc --watch",
		"build": "pnpm run build:tsup && pnpm run build:tsc",
		"build:tsup": "tsup --clean",
		"build:tsc": "tsc",
		"migrate": "drizzle-kit push",
		"studio": "drizzle-kit studio",
		"lint": "biome check .",
		"format": "biome check --fix --unsafe .",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"drizzle-orm": "^0.44.5",
		"valibot": "^1.1.0"
	},
	"devDependencies": {
		"@repo/tsup-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/node": "^24.3.1",
		"drizzle-kit": "^0.31.4"
	}
}
